<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.android_2015.lesson_8">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".DemoApplication">

        <activity android:name=".ok.OkDemoActivity" android:label="@string/ok_demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".vk.VkDemoActivity" android:label="@string/vk_demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ok.OkLoginActivity"/>

        <activity android:name="com.vk.sdk.VKServiceActivity"
                  android:label="ServiceActivity"
                  android:theme="@style/VK.Transparent" />

    </application>

</manifest>
